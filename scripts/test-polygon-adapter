#!/usr/bin/env bash
# test-polygon-adapter: Run Polygon adapter unit tests
#
# Usage:
#   ./scripts/test-polygon-adapter           # Run all tests
#   ./scripts/test-polygon-adapter --watch   # Run in watch mode
#
# This script runs the Polygon adapter test suite using Jest.

set -euo pipefail

ROOT_DIR="$(cd "$(dirname "$0")/.." && pwd)"
cd "$ROOT_DIR/adapters/polygon"

WATCH=""

while [[ $# -gt 0 ]]; do
  case $1 in
    --watch|-w)
      WATCH="--watch"
      shift
      ;;
    *)
      echo "Unknown option: $1"
      echo ""
      echo "Usage: ./scripts/test-polygon-adapter [--watch]"
      exit 1
      ;;
  esac
done

echo "=== Running Polygon Adapter Tests ==="
echo ""

# Ensure dependencies are installed
if [[ ! -d "node_modules" ]]; then
  echo "Installing dependencies..."
  npm ci
  echo ""
fi

echo "Running tests..."
# shellcheck disable=SC2086
npm test -- $WATCH
