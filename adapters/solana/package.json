{
  "name": "fanengagement-solana-adapter",
  "version": "1.0.0",
  "description": "Solana blockchain adapter for FanEngagement platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=integration",
    "lint": "eslint src tests --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "solana",
    "blockchain",
    "adapter",
    "fanengagement"
  ],
  "author": "FanEngagement Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@solana/web3.js": "^1.95.8",
    "@solana/spl-token": "^0.4.9",
    "express": "^4.21.2",
    "winston": "^3.17.0",
    "prom-client": "^15.1.3",
    "zod": "^3.24.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
